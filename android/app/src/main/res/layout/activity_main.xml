<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/ToolbarTitleText"
            app:menu="@menu/top_app_bar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text Input (Fills remaining space, but has min height) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:hint="@string/app_name"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:layout_constraintHeight_min="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/controlsCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textLongMessage"
                    android:scrollbars="vertical"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:text="@string/default_input_text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Controls Card (Fixed at Bottom of ScrollView content) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/controlsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_margin="16dp"
                android:alpha="0.92"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="88dp">

                    <!-- Language Selector -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/langSpinnerLayout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Language Hint">

                        <AutoCompleteTextView
                            android:id="@+id/langSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="English" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <!-- Voice Selector -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/voice_style_label">

                        <AutoCompleteTextView
                            android:id="@+id/voiceSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="M1 - Lively" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Voice Mixing Controls -->
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/mixSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mix_voices_label"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/mixingControls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:hint="@string/voice_style_2_label">

                            <AutoCompleteTextView
                                android:id="@+id/voiceSpinner2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:text="M2 - Deep" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mix_ratio_label"
                                android:textAppearance="?attr/textAppearanceTitleSmall"/>

                            <TextView
                                android:id="@+id/mixValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="50%"
                                android:textAppearance="?attr/textAppearanceLabelLarge"/>
                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/mixSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="0.0"
                            android:valueTo="1.0"
                            android:stepSize="0.1"
                            android:value="0.5"/>
                    </LinearLayout>

                    <!-- Speed Control -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speed_label"
                            android:textAppearance="?attr/textAppearanceTitleSmall"/>
                        
                        <TextView
                            android:id="@+id/speedValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="1.05x"
                            android:textAppearance="?attr/textAppearanceLabelLarge"/>
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/speedSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0.9"
                        android:valueTo="1.5"
                        android:stepSize="0.05"
                        android:value="1.05"/>

                    <!-- Quality Control -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quality_label"
                            android:textAppearance="?attr/textAppearanceTitleSmall"/>

                        <TextView
                            android:id="@+id/qualityValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="5 steps"
                            android:textAppearance="?attr/textAppearanceLabelLarge"/>
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/qualitySeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="1.0"
                        android:valueTo="10.0"
                        android:stepSize="1.0"
                        android:value="5.0"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button (Overlapping Card Edge, anchored to CoordinatorLayout) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/synthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/synthesize_button"
        app:icon="@android:drawable/ic_btn_speak_now"
        android:elevation="8dp"/>

    <!-- Mini Player Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/miniPlayerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
        android:visibility="gone"
        style="@style/Widget.Material3.CardView.Elevated">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/miniPlayerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/now_playing_title"
                    android:textAppearance="?attr/textAppearanceLabelSmall"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/miniPlayerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/miniPlayerPlayPause"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@android:drawable/ic_media_pause"
                app:iconTint="?attr/colorOnSurface" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>