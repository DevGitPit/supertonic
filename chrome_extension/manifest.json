{
  "manifest_version": 3,
  "name": "Supertonic Local TTS",
  "version": "1.3",
  "description": "Text-to-Speech using local C++ Supertonic engine",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Supertonic Text Collector"
  },
  "background": {
    "service_worker": "background.js"
  }
}