{
  "manifest_version": 3,
  "name": "Supertonic Local TTS",
  "version": "1.3",
  "description": "Text-to-Speech using local C++ Supertonic engine",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tts",
    "offscreen",
    "contextMenus"
  ],
  "host_permissions": [
    "http://127.0.0.1:8080/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Supertonic TTS"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*.png", "worklet.js", "offscreen.html", "offscreen.js", "currencyNormalizer.js"],
    "matches": ["<all_urls>"]
  }]
}